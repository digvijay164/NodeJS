<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <link rel="stylesheet" href="../stylesheets/style.css"> -->
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <form action="/create" method="post">
        <div class="title absolute ml-[2rem] mt-[5rem] w-[95%] h-[9vh]">
          <input
            class="pl-[2rem] w-full h-[80%] rounded-[20px] bg-zinc-700 text-white text-2xl"
            type="text"
            name="title"
            id=""
            placeholder="Title"
          />
        </div>
        <div class="content absolute w-[95%] h-[15vh] ml-[2rem] mt-[10rem]">
          <textarea
            class="w-full h-full pl-[3rem] pt-[2.3rem] bg-zinc-700 rounded-[20px] text-white text-3xl"
            name="details"
            id=""
            placeholder="Content"
          ></textarea>
          <input
            class="text-white bg-blue-500 h-[2rem] w-[6rem] mt-[1.4rem] text-[20px] rounded-[14px]"
            type="submit"
            value="Submit"
          />
        </div>
      </form>

      <div
        class="cards absolute w-full h-[20rem] mt-[20rem] flex gap-[3rem] p-[2rem]"
      >
        <% if(files.length > 0){ %> <% files.forEach((val)=>{ %>
        <div
          class="c1 w-[25%] h-[100%] bg-zinc-700 rounded-[20px] text-white p-[1rem]"
        >
          <h1 class="text-[25px]"><%= val %></h1>
          <a href="">Read more</a>
        </div>
        <% }) %> <% } else { %>
        <h1 class="text-white text-2xl mt-[2rem]">No task yet</h1>
        <% } %>
      </div>
    </div>
    <!-- <script src="../javascripts/script.js"></script> -->
  </body>
</html>
